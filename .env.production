# 生产环境配置
NODE_ENV=production

# 数据库配置（生产环境请修改强密码）
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION_STRONG_PASSWORD
POSTGRES_DB=duty_system

# 数据库连接字符串（容器内使用）
DATABASE_URL=postgresql://postgres:CHANGE_ME_IN_PRODUCTION_STRONG_PASSWORD@postgres:5432/duty_system

# 后端服务配置（生产环境请修改强密钥）
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_STRONG_SECRET_KEY_AT_LEAST_32_CHARS
PORT=3000

# 邮件服务配置（生产环境请修改）
MAIL_USER=your-email@example.com
MAIL_PASS=your-email-password

# 是否执行数据库种子数据（生产环境建议设为 false）
DB_SEED=false
